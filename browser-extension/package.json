{
  "name": "resuboost-browser-extension",
  "version": "1.0.0",
  "description": "ResuBoost AI Browser Extension - Auto-fill job applications with your profile data",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist",
    "package": "npm run build:prod && cd dist && zip -r ../resuboost-extension.zip ."
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^0.2.0",
    "@anthropic-ai/sdk": "^0.19.0",
    "@crxjs/vite-plugin": "^2.0.0-beta.23",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "zod": "^3.22.0"
  }
}
