# =============================================================================
# Security - GENERATE NEW VALUES FOR PRODUCTION
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=[GENERATE-A-SECRET-KEY]
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Cookie Security
COOKIE_HTTPONLY=true
COOKIE_SECURE=true
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=.resuboost.ai

# =============================================================================
# LLM Provider Configuration
# =============================================================================
LLM_PROVIDER=openai
LLM_REQUEST_TIMEOUT=60
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=1.0

# OpenAI
OPENAI_API_KEY=[YOUR-OPENAI-API-KEY]
OPENAI_MODEL=gpt-4o-mini

# Anthropic (alternative)
# ANTHROPIC_API_KEY=[YOUR-ANTHROPIC-API-KEY]
# ANTHROPIC_MODEL=claude-3-haiku-20240307

# =============================================================================
# Redis Configuration (for horizontal scaling)
# =============================================================================
# Get from Redis Cloud, Upstash, or Railway
REDIS_URL=[YOUR-REDIS-URL]

# =============================================================================
# Sentry Error Monitoring
# =============================================================================
# Create project at https://vivance.sentry.io
SENTRY_DSN=[YOUR-SENTRY-DSN]
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
AUTH_RATE_LIMIT_REQUESTS=5
AUTH_RATE_LIMIT_WINDOW=60
AI_RATE_LIMIT_REQUESTS=20
AI_RATE_LIMIT_WINDOW=60
AUTH_LOCKOUT_THRESHOLD=10

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=["https://resuboost.ai","https://www.resuboost.ai","https://api.resuboost.ai"]

# =============================================================================
# Security Middleware
# =============================================================================
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true
ENABLE_INPUT_SANITIZATION=true
ENABLE_AUDIT_LOGGING=true
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000

# =============================================================================
# File Upload Limits
# =============================================================================
MAX_FILE_SIZE_MB=10
MAX_RESUME_LENGTH=100000
